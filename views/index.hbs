<!-- New Product -->
<section class="newproduct bgwhite p-t-45 p-b-105">
	<div class="container">
		<div class="sec-title p-b-60">
			<h3 class="m-text5 t-center">
				{{listName}}
			</h3>
		</div>

		<!-- Slide2 -->
			<div id="product-list">
				{{#each productList}}
				<!-- ======= ITEM ========= -->
				<div class="block2 product-item">
					<div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew">
						<img src="{{images.[0]}}" alt="IMG-PRODUCT">
						<div class="block2-overlay trans-0-4">
							<a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4" tabindex="0">
								<i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
								<i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
							</a>

							<div class="block2-btn-addcart w-size1 trans-0-4">
								<button class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4" tabindex="0">
									Thêm vào giỏ
								</button>
							</div>
						</div>
					</div>

					<div class="block2-txt p-t-20">
						<a href="product.html?product={{_id}}" class="block2-name dis-block s-text3 p-b-5" tabindex="0"><b>{{name}}</b></a>
						<span class="block2-price m-text6 p-r-5">{{price}} VND</span>
					</div>
				</div>
				<!-- ======= ITEM ========= -->
				{{/each}}
			</div>



	</div>
</section>