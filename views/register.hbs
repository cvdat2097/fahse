<!-- content page -->
<section class="bgwhite p-t-66 p-b-60">
	<div class="container adjustcontainer">
		<div class="row">
			<div class="col-md-6 p-b-30">
				<form class="leave-comment">
					<h4 class="m-text26 p-b-36 p-t-15">
						Thông tin đăng ký
					</h4>

					<div class="bo4 of-hidden size15 m-b-20">
						<input class="sizefull s-text7 p-l-22 p-r-22" type="text" id="name" placeholder="Tên">
					</div>

					<div class="bo4 of-hidden size15 m-b-20">
						<input class="sizefull s-text7 p-l-22 p-r-22" type="text" id="username" placeholder="Tên đăng nhập">
					</div>

					<div class="bo4 of-hidden size15 m-b-20">
						<input class="sizefull s-text7 p-l-22 p-r-22" type="email" id="email" placeholder="Email">
					</div>

					<div class="bo4 of-hidden size15 m-b-20">
						<input class="sizefull s-text7 p-l-22 p-r-22" type="text" id="phone" placeholder="Số điện thoại">
					</div>

					<div class="bo4 of-hidden size15 m-b-20">
						<input class="sizefull s-text7 p-l-22 p-r-22" type="text" id="address" placeholder="Địa chỉ">
					</div>

					<div class="bo4 of-hidden size15 m-b-20">
						<input class="sizefull s-text7 p-l-22 p-r-22" type="password" id="password" placeholder="Mật khẩu">
					</div>

					<div class="bo4 of-hidden size15 m-b-20">
						<input class="sizefull s-text7 p-l-22 p-r-22" type="password" id="verifypassword" placeholder="Nhập lại mật khẩu">
					</div>

					<div class="of-hidden size15 m-b-20">
						<p class="sizefull s-text23 p-l-22 p-r-22 text-red" id="warning"></p>
					</div>
					<div class="w-size25">
						<!-- Button -->
						<button type="button" class="flex-c-m size2 bg1 bo-rad-23 hov1 m-text3 trans-0-4 bo-rad-margin" onclick="registerUser(document.getElementById('username').value,document.getElementById('password').value,document.getElementById('name').value,document.getElementById('email').value,document.getElementById('phone').value,document.getElementById('address').value,document.getElementById('verifypassword').value)">
							Đăng kí
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
