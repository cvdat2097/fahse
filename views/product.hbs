<!-- Product Detail -->
<div class="container bgwhite p-t-35 p-b-80">
	<div class="flex-w flex-sb">
		<div class="w-size13 p-t-30 respon5">
			<div class="wrap-slick3 flex-sb flex-w">
				<div class="wrap-slick3-dots"></div>

				<div class="slick3">
					{{#each images}}
					<div class="item-slick3" data-thumb="{{this}}">
						<div class="wrap-pic-w">
							<img src="{{this}}" alt="IMG-PRODUCT">
						</div>
					</div>
					{{/each}}
				</div>
			</div>
		</div>

		<div class="w-size14 p-t-30 respon5">
			<h4 class="product-detail-name m-text16 p-b-13">
				{{name}}
			</h4>

			<span class="m-text17">
				{{price}} VND
			</span>

			<p class="s-text8 p-t-10">
				{{description}}
			</p>

			<!--  -->
			<div class="p-t-33 p-b-60">
				<div class="flex-m flex-w p-b-10">
					<div class="s-text15 w-size15 t-center">
						Kích cỡ
					</div>

					<div class="rs2-select2 rs3-select2 bo4 of-hidden w-size16">
						<select class="selection-2" name="size">
							<option>Chọn kích cỡ</option>
							{{#each size}}
							<option>{{this}}</option>
							{{/each}}
						</select>
					</div>
				</div>

				<div class="flex-m flex-w">
					<div class="s-text15 w-size15 t-center">
						Màu sắc
					</div>

					<div class="rs2-select2 rs3-select2 bo4 of-hidden w-size16">
						<select class="selection-2" name="color">
							<option>Chọn màu sắc</option>
							{{#each color}}
							<option>{{this}}</option>
							{{/each}}
						</select>
					</div>
				</div>

				<div class="flex-r-m flex-w p-t-10">
					<div class="w-size16 flex-m flex-w">
						<div class="flex-w bo5 of-hidden m-r-22 m-t-10 m-b-10">
							<button class="btn-num-product-down color1 flex-c-m size7 bg8 eff2">
								<i class="fs-12 fa fa-minus" aria-hidden="true"></i>
							</button>

							<input class="size8 m-text18 t-center num-product" type="number" name="num-product" value="1">

							<button class="btn-num-product-up color1 flex-c-m size7 bg8 eff2">
								<i class="fs-12 fa fa-plus" aria-hidden="true"></i>
							</button>
						</div>

						<div class="btn-addcart-product-detail size9 trans-0-4 m-t-10 m-b-10">
							<!-- Button -->
							<button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
								Thêm vào giỏ
							</button>
						</div>
					</div>
				</div>
			</div>

			<div class="p-b-45">
				<span class="s-text8">Danh mục: <a href="/filter.html?category={{categoryID}}">{{category}}</a></span>
			</div>

			<!--  -->
		</div>
	</div>
</div>


{{!-- DANH SÁCH SẢN PHẨM LIÊN QUAN --}}
<section class="newproduct bgwhite p-t-45 p-b-105">
	<div class="container">
		<div class="sec-title p-b-60">
			<h3 class="m-text5 t-center">
				DANH SÁCH SẢN PHẨM LIÊN QUAN
			</h3>
		</div>

		<!-- Slide2 -->
			<div id="product-list">
				{{#each productList}}
				<!-- ======= ITEM ========= -->
				<div class="block2 product-item">
					<div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew">
						<img src="{{images.[0]}}" alt="IMG-PRODUCT">
						<div class="block2-overlay trans-0-4">
							<a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4" tabindex="0">
								<i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
								<i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
							</a>

							<div class="block2-btn-addcart w-size1 trans-0-4">
								<button class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4" tabindex="0">
									Thêm vào giỏ
								</button>
							</div>
						</div>
					</div>

					<div class="block2-txt p-t-20">
						<a href="product.html?product={{_id}}" class="block2-name dis-block s-text3 p-b-5" tabindex="0"><b>{{name}}</b></a>
						<span class="block2-price m-text6 p-r-5">{{price}} VND</span>
					</div>
				</div>
				<!-- ======= ITEM ========= -->
				{{/each}}
			</div>



	</div>
</section>