<div class="container">
    <!-- Cart item -->
    <div class="container-table-cart pos-relative">
        <div class="wrap-table-shopping-cart bgwhite">
            <table class="table-shopping-cart">
                <tr class="table-head">
                    <th class="column-1"></th>
                    <th class="column-2">Sản phẩm</th>
                    <th class="column-3">Giá</th>
                    <th class="column-4 p-l-70">Số lượng</th>
                    <th class="column-5">Tổng</th>
                </tr>

                {{#each cartDetail}}
                <!-- ============ ITEM ========= -->
                <tr class="table-row">
                    <td class="column-1">
                        <span hidden class="item-productid">{{product}}</span>
                        <div class="cart-img-product b-rad-4 o-f-hidden" onclick="removeCartItem({{@index}})">
                            <img src="{{image}}" alt="IMG-PRODUCT">
                        </div>
                    </td>
                    <td class="column-2">
                        <a href="/product.html?product={{product}}" class="header-cart-item-name" target="_blank">
                            {{name}}
                        </a>
                    </td>
                    <td class="column-3">{{price}}</td>
                    <td class="column-4">
                        <div class="flex-w bo5 of-hidden w-size17">
                            {{!-- <button class="btn-num-product-down color1 flex-c-m size7 bg8 eff2">
                                <i class="fs-12 fa fa-minus" aria-hidden="true"></i>
                            </button> --}}

                            <!--<input class="size8 m-text18 t-center num-product" type="number" name="num-product1" value="{{quantity}}">-->
                            <input class="item-productquantity" type="number" placeholder="Số lượng" name="num-product1" step="1" value="{{quantity}}"/>
                            {{!-- <button class="btn-num-product-up color1 flex-c-m size7 bg8 eff2">
                                <i class="fs-12 fa fa-plus" aria-hidden="true"></i>
                            </button> --}}
                        </div>
                    </td>
                    <td id="price-of-item" class="column-5">{{totalPrice}}</td>
                </tr>
                <!-- ============ END ITEM ========= -->
                {{/each}}
            </table>
        </div>
    </div>

    <div class="flex-w flex-sb-m p-t-25 p-b-25 bo8 p-l-35 p-r-60 p-lr-15-sm">
        <div class="flex-w flex-m w-full-sm">
            <div class="size11 bo4 m-r-10">
                <input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="coupon-code" placeholder="Coupon Code">
            </div>

            <div class="size12 trans-0-4 m-t-10 m-b-10 m-r-10">
                <!-- Button -->
                <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                    Áp dụng coupon
                </button>
            </div>
        </div>

        <div class="size10 trans-0-4 m-t-10 m-b-10">
            <!-- Button -->
            <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4" onclick="UpdateCheckoutCart()">
                Cập nhật giỏ hàng
            </button>
        </div>
    </div>

    <!-- Total -->
    <div class="bo9 w-size29 p-l-40 p-r-40 p-t-30 p-b-38 m-t-30 m-r-0 m-l-auto p-lr-15-sm">
        <h5 class="m-text20 p-b-24">
            Thông tin đơn hàng
        </h5>

        <!--  -->

        <div class="flex-w flex-sb bo10 p-t-15 p-b-20">
            <span class="s-text18 w-size19 w-full-sm">
                Thông tin nhận hàng:
            </span>
            <div class="w-size20 w-full-sm">
                <div class="size15 bo4 m-b-12">
                    <input class="sizefull s-text8 p-l-15 p-r-15" type="text" name="state" placeholder="Họ và Tên" id="checkout-name">
                </div>

                <div class="size15 bo4 m-b-22">
                    <input class="sizefull s-text7 p-l-15 p-r-15" type="text" name="postcode" placeholder="Số điện thoại" id="checkout-phone">
                </div>

                <div class="size15 bo4 m-b-22">
                    <input class="sizefull s-text7 p-l-15 p-r-15" type="text" name="postcode" placeholder="Địa chỉ" id="checkout-address">
                </div>

                <div class="size15 bo4 m-b-22">
                    <input class="sizefull s-text7 p-l-15 p-r-15" type="text" name="postcode" placeholder="Ghi chú" id="checkout-note">
                </div>
            </div>
        </div>

        <!--  -->
        <div class="flex-w flex-sb-m p-t-26 p-b-30">
            <span class="m-text22 w-size19 w-full-sm">
                Tổng tiền:
            </span>

            <span class="m-text21 w-size20 w-full-sm" style="font-weight: bold; font-size:1.5em;">
                {{totalPrice}} VND
            </span>
        </div>

        <div class="size15 trans-0-4">
            <!-- Button -->
            <button class="flex-c-m size10 bg1 bo-rad-23 hov1 s-text1 trans-0-4 center" style="float:right;" onclick="Order()">
                Đặt hàng
            </button>
        </div>

    </div>
</div>