<!--Navigation-->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            <i class="fa fa-laptop"></i> Quản lý sản phẩm</h3>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="index.html">Trang chủ</a>
            </li>
            <li>
                <i class="fa fa-laptop"></i>Quản lý sản phẩm</li>
        </ol>
    </div>
</div>

<!-- main content-->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading" style="font-weight:bold">
                Danh sách sản phẩm
            </header>

            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <!-- Header -->
                    <tr>
                        <th>
                            <i class="icon_profile"></i> Tên</th>
                        <th>
                            <i class="icon_calendar"></i> Giá (VND)</th>
                        <th>
                            <i class="icon_mail_alt"></i> Lượt xem</th>
                        <th>
                            <i class="icon_pin_alt"></i> Đã bán</th>
                        <th>
                            <i class="icon_cogs"></i> Action</th>
                    </tr>
                    <!-- Header -->

                    {{#each products}}
                    <!-- Item -->
                    <tr>
                        <td><a style="color:midnightblue" href="../product.html?product={{_id}}" target="t_blank">{{name}}</a></td>
                        <td>{{price}}</td>
                        <td>{{view}}</td>
                        <td>{{nItemSold}}</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary" href="#">
                                    <i class="icon_plus_alt2"></i>
                                </a>
                                <a class="btn btn-success" href="#">
                                    <i class="icon_check_alt2"></i>
                                </a>
                                <a class="btn btn-danger" href="#">
                                    <i class="icon_close_alt2"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    <!-- Item -->
                    {{/each}}
                </tbody>
            </table>
        </section>
    </div>
</div>