<!-- Product Detail -->
<div class="container bgwhite p-t-35 p-b-80">
	<div class="flex-w flex-sb">
		<div class="w-size13 p-t-30 respon5">
			<div class="wrap-slick3 flex-sb flex-w">
				<div class="wrap-slick3-dots"></div>

				<div class="slick3">
					{{#each images}}
					<div class="item-slick3" data-thumb="{{this}}">
						<div class="wrap-pic-w">
							<img src="{{this}}" alt="IMG-PRODUCT">
						</div>
					</div>
					{{/each}}
				</div>
			</div>
		</div>

		<div class="w-size14 p-t-30 respon5">
			<h4 class="product-detail-name m-text16 p-b-13">
				{{name}}
			</h4>

			<span class="m-text17">
				{{price}} VND
			</span>

			<p class="s-text13 p-t-10">
				{{description}}
			</p>

			<!--  -->
			<div>
				<div class="flex-m flex-w p-b-10">
					<div class="s-text15 w-size15 t-center">
						Kích cỡ
					</div>

					<div class="rs2-select2 rs3-select2 bo4 of-hidden w-size16">
						<select id="product-size" class="selection-2" name="size">
							<option>Chọn kích cỡ</option>
							{{#each size}}
							<option>{{this}}</option>
							{{/each}}
						</select>
					</div>
				</div>

				<div class="flex-m flex-w">
					<div class="s-text15 w-size15 t-center">
						Màu sắc
					</div>

					<div class="rs2-select2 rs3-select2 bo4 of-hidden w-size16">
						<select id="product-color" class="selection-2" name="color">
							<option>Chọn màu sắc</option>
							{{#each color}}
							<option>{{this}}</option>
							{{/each}}
						</select>
					</div>
				</div>

				<div class="flex-r-m flex-w p-t-10">
					<div class="w-size16 flex-m flex-w">
						<div class="flex-w bo5 of-hidden m-r-22 m-t-10 m-b-10">
							<button class="btn-num-product-down color1 flex-c-m size7 bg8 eff2">
								<i class="fs-12 fa fa-minus" aria-hidden="true"></i>
							</button>

							<input id="product-quantity" class="size8 m-text18 t-center num-product" type="number" name="num-product" value="1">

							<button class="btn-num-product-up color1 flex-c-m size7 bg8 eff2">
								<i class="fs-12 fa fa-plus" aria-hidden="true"></i>
							</button>
						</div>

						<div class="btn-addcart-product-detail size9 trans-0-4 m-t-10 m-b-10">
							<!-- Button -->
							<button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4" onclick="addItemToCartOnProductDetailPage('{{_id}}')">
								Thêm vào giỏ
							</button>
						</div>
					</div>
				</div>
			</div>
			<div>
				<span class="s-text13">Lượt xem: {{view}} </span>
			</div>
			<div>
				<span class="s-text11">Danh mục: {{#each category}}
					<a href="/product-list.html?category={{id}}">{{name}}, </a> {{/each}}
				</span>
			</div>
			{{!-- comment --}}
			<h3 style="margin:10px 0px;">
				BÌNH LUẬN
			</h3>
			{{#each comment}}
			<div>
				<div class="row">
					<div class="col-sm-12">
						<div class="panel panel-white post">
							<div class="post-heading">
								<div class="pull-left image">
									<img src="http://bootdey.com/img/Content/user_1.jpg" class="img-circle avatar" alt="user profile image">
								</div>
								<div class="pull-left meta">
									<div class="title">
										<a href="#">
											<b>{{name}}</b>
										</a>
										made a post.
									</div>
									<p>{{content}}</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			{{/each}} {{!-- PHAN TRANG --}}
			<ul class="pagination" style="margin:10px auto">
				<li class="page-item disabled">
					<span class="page-link">Previous</span>
				</li>
				{{#each pagination}}
				<li class="page-item">
					<a class="page-link" href="product.html?product={{_id}}&page={{page}}">{{page}}</a>
				</li>
				{{/each}}
				<li class="page-item">
					<a class="page-link" href="#">Next</a>
				</li>
			</ul>
			{{!-- ADD COMMENT --}}
			<div class="widget-area no-padding blank">
				<div class="status-upload">
					<form>
						<textarea placeholder="Your comment" name="comment"></textarea>
						<a href="/product.html?product=5b2fd7d4c9235a1d00140a55&page=0" class="btn btn-success green">
							<i class="fa fa-share"></i> Comment</a>
					</form>
				</div>
			</div>
			<!--  -->
		</div>
	</div>
</div>

<!-- Related product -->
<section class="newproduct bgwhite p-t-45 p-b-105">
	<div class="container">
		<div class="sec-title p-b-60">
			<h3 class="m-text5 t-center">
				SẢN PHẨM LIÊN QUAN
			</h3>
		</div>

		<!-- Slide2 -->

		<div class="wrap-slick2">
			<div class="slick2">
				{{#each related_product}}
				<!-- ======= ITEM ========= -->
				<div class="item-slick2 p-l-15 p-r-15">
					<!-- Block2 -->
					<div class="block2">
						<div class="block2 product-item">
							<div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew">
								<img src="{{images.[0]}}" alt="IMG-PRODUCT">
								<div class="block2-overlay trans-0-4">
									<a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4" tabindex="0">
										<i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
										<i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
									</a>

									<div class="block2-btn-addcart w-size1 trans-0-4">
										<button class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4" tabindex="0" onclick="addItemToCart('{{_id}}',1,'{{color.[0]}}','{{size.[0]}}')">
											Thêm vào giỏ
										</button>
									</div>
								</div>
							</div>

							<div class="block2-txt p-t-20">
								<a href="product.html?product={{_id}}" class="block2-name dis-block s-text3 p-b-5" tabindex="0" style="font-weight: bold">{{name}}</a>
								<span class="block2-price m-text6 p-r-5">{{price}} VND</span>
							</div>
						</div>
					</div>
				</div>
				<!-- ======= ITEM ========= -->
				{{/each}}
			</div>
		</div>

	</div>
</section>