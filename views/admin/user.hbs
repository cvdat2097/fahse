            <a href="#">»</a>
        </li>
    </ul>
</div>

<!--modal start-->
<!-- Modal UPDATE-->
<div class="modal fade" id="modalUpdate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Cập nhật thông tin người dùng</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <label class="col-sm-2 control-label">Tên</label>
                    <div class="col-sm-10">
                        <input id="modalUpdateName" type="text" class="form-control">
                    </div>
                </div>


                <div class="row">

                    <label class="col-sm-2 control-label">Điện thoại</label>
                    <div class="col-sm-10">
                        <input id="modalUpdatePhone" type="text" class="form-control">
                    </div>
                </div>

                <div class="row">

                    <label class="col-sm-2 control-label">Địa chỉ</label>
                    <div class="col-sm-10">
                        <input id="modalUpdateAddress" type="text" class="form-control">
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="button">Hủy</button>
                <button id="modalUpdateComfirmButton" data-dismiss="modal" class="btn btn-warning" type="button"> Cập nhật</button>
            </div>
        </div>
    </div>
</div>

<!-- modal DELETE-->
<div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Xóa tài khoản</h4>
            </div>
            <div class="modal-body">

                <p>Bạn có thực sự muốn xóa
                    <span id="modalDeleteUsername" style="font-weight: bold"></span> ?</p>

            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="button">Hủy</button>
                <button id="modalDeleteComfirmButton" class="btn btn-danger" type="button" data-dismiss="modal"> Xóa</button>
            </div>
        </div>
    </div>
</div>