<!--Navigation-->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            <i class="fa fa-laptop"></i> Quản lý đơn hàng</h3>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="index.html">Trang chủ</a>
            </li>
            <li>
                <i class="fa fa-laptop"></i>Quản lý đơn hàng</li>
        </ol>
    </div>
</div>

<!-- main content-->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading" style="font-weight:bold">
                Danh sách đơn hàng
            </header>

            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <!-- Header -->
                    <tr>
                        <th>
                            <i class="icon_bag"></i> Mã Đơn</th>
                        <th>
                            <i class="icon_currency"></i> Trạng thái</th>
                        <th>
                            <i class="icon_datareport"></i> Chi tiết đơn hàng</th>

                        <th>
                            <i class="icon_datareport"></i> Người nhận</th>
                        <th>
                            <i class="icon_datareport"></i> Địa chỉ</th>
                        <th>
                            <i class="icon_datareport"></i> SĐT</th>
                        <th>
                            <i class="icon_tool"></i>
                        </th>
                    </tr>
                    <!-- Header -->

                    {{#each orders}}
                    <!-- Item -->
                    <tr id="datarow{{@index}}">
                        <td class="order-_id">{{_id}}</td>
                        <td>
                            <select style="font-weight:bold;" class="order-status">
                                <option>{{status}}</option>
                                <option>pending</option>
                                <option>delivering</option>
                                <option>delivered</option>
                            </select>
                        </td>
                        <td class="order-detail">
                            {{#each detail}}
                            <a target="t_blank" href="/product.html?product={{product}}">{{name}}</a> - {{color}} - {{size}} x {{quantity}}
                            <br /> {{/each}}
                        </td>
                        <td class="order-recipient">{{recipientName}}</td>
                        <td class="order-address">{{address}}</td>
                        <td class="order-phone">{{phone}}</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-info" data-toggle="modal" href="#modalUpdate" onclick="SendDataToOrderModal('modalUpdate','datarow{{@index}}')">
                                    <i class="icon_pencil-edit_alt"></i>
                                </a>
                                <a class="btn btn-danger" data-toggle="modal" href="#modalDelete" onclick="SendDataToOrderModal('modalDelete','datarow{{@index}}')">
                                    <i class="icon_trash"></i>
                                </a>
                            </div>
                        </td>
                        <td class="order-_id" style="display:none">{{_id}}</td>
                    </tr>
                    <!-- Item -->
                    {{/each}}
                </tbody>
            </table>
        </section>
    </div>
</div>

<!-- pagination -->
<div class="text-center">
    <ul class="pagination">
        <li>
            <a href="#">1</a>
        </li>
        <li>
            <a href="#">2</a>
        </li>
        <li>
            <a href="#">3</a>
        </li>
        <li>
            <a href="#">4</a>
        </li>
        <li>
            <a href="#">5</a>
        </li>
        <li>
            <a href="#">»</a>
        </li>
    </ul>
</div>

<!--modal start-->
<!-- Modal UPDATE-->
<div class="modal fade" id="modalUpdate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Cập nhật thông tin người dùng</h4>
            </div>
            <div class="modal-body">
                Xác nhận cập nhật?
            </div>

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="button">Hủy</button>
                <button id="modalUpdateComfirmButton" data-dismiss="modal" class="btn btn-warning" type="button"> Cập nhật</button>
            </div>
        </div>
    </div>
</div>

<!-- modal DELETE-->
<div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Xóa tài khoản</h4>
            </div>
            <div class="modal-body">

                <p>Bạn có thực sự muốn xóa
                    <span id="modalDeleteOrderid" style="font-weight: bold"></span> ?</p>

            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="button">Hủy</button>
                <button id="modalDeleteComfirmButton" class="btn btn-danger" type="button" data-dismiss="modal"> Xóa</button>
            </div>
        </div>
    </div>
</div>